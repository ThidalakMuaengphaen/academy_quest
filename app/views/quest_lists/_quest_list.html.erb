<%= turbo_frame_tag dom_id(quest_list) do %>
  <div class="bg-white rounded-xl shadow-md p-5 mb-4 flex justify-between items-start hover:shadow-xl hover:-translate-y-1 transition-all duration-200">
    <!-- Left: Checkbox + Content -->
    <div class="flex items-start space-x-3 w-full">
     <%= button_to quest_list_path(quest_list),
        method: :patch,
        params: { quest_list: { completed: !quest_list.completed } },
        class: "mt-2 w-5 h-5 accent-indigo-600 cursor-pointer" do %>
      <%= check_box_tag "completed",
          true,
          quest_list.completed,
          disabled: true,
          class: "pointer-events-none" %>
      <% end %>


      <div class="flex-1 mt-1">
        <span id="title-<%= quest_list.id %>"
          class="w-50 sm:w-[50vw] break-words block text-lg md:text-xl font-semibold text-purple-800 <%= 'line-through text-gray-400' unless !quest_list.completed %>">
          <%= quest_list.title %>
        </span>
      </div>
    </div>

    <!-- Right: Delete -->
    <div class="flex flex-col items-end ml-4 mt-1">
      <%= button_to "ðŸ—‘ï¸",
      quest_list,
      method: :delete,
      form: { data: { turbo_stream: true } },
      class: "text-red-600" %>
    </div>
  </div>
<% end %>